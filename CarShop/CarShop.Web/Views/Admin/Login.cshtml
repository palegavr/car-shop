@model CarShop.Web.Models.Admin.LoginViewModel

@* Форма входа *@
<form method="post" style="font-size: 8mm;">
    <div class="container bg-secondary-subtle p-3 my-3 border border-1 rounded rounded-3 shadow position-absolute top-50 start-50 translate-middle" style="max-width: 700px;">
        <div class="mb-3">
            <label for="exampleFormControl1" class="form-label">Email</label>
            <input type="email" class="form-control" name="email" id="exampleFormControl1" value="@Model.Login" placeholder="Email">
        </div>
        <div class="mb-3">
            <label for="exampleFormControl2" class="form-label">Пароль</label>
            <input type="password" class="form-control" name="password" id="exampleFormControl2" value="@Model.Password" placeholder="Password">
        </div>
        <input class="btn btn-primary w-100" type="submit" value="Войти" style="font-size: 6mm;">
        @if (Model.ErrorMessage is not null)
        {
            <div class="text-danger text-center">@Model.ErrorMessage</div>
        }
    </div>
</form>